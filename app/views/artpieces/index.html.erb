          <div class="artist+name">
          <p><%= artpiece.artist %></p>
          <p><em><%= artpiece.name %></em></p>
          </div>
        </div>
        <% if artpiece.photo.attached? %>
          <%= cl_image_tag artpiece.photo.key %>
        <% else %>
          <%# Une image de base %>
        <% end %>
        <div class='show-edit-artpiece position-absolute top-0 end-0'>
