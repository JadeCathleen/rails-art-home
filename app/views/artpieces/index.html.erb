                <% end %>
                <% if policy(artpiece).destroy? %>
                  <%= link_to artpiece_path(artpiece), method: :delete, data: { confirm: "Are you sure you want to delete #{artpiece.name} ?" } do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                <% end %>
              </div>
            </div>
